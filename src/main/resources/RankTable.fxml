<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cse338project.gui.RankTableController">
   <children>
      <TabPane prefHeight="424.0" prefWidth="600.0" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab text="Home">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="230.0" prefWidth="307.0">
                     <children>
                        <HBox prefHeight="131.0" prefWidth="600.0">
                           <children>
                              <VBox prefHeight="100.0" prefWidth="195.0">
                                 <children>
                                    <TextArea prefHeight="46.0" prefWidth="190.0" text="Welcome to the FIFA CocaCola&#10;National Teams Ranking" />
                                 </children>
                              </VBox>
                              <VBox prefHeight="100.0" prefWidth="214.0">
                                 <children>
                                    <Label prefHeight="17.0" prefWidth="215.0" text="Filter by Continent:">
                                       <VBox.margin>
                                          <Insets top="10.0" />
                                       </VBox.margin>
                                       <padding>
                                          <Insets left="5.0" />
                                       </padding>
                                       <font>
                                          <Font size="21.0" />
                                       </font>
                                    </Label>
                                    <ComboBox fx:id="continentFilter" onAction="#filterContinent" prefHeight="26.0" prefWidth="216.0">
                                       <VBox.margin>
                                          <Insets top="15.0" />
                                       </VBox.margin>
                                    </ComboBox>
                                 </children>
                              </VBox>
                              <VBox prefHeight="100.0" prefWidth="192.0">
                                 <children>
                                    <Label prefHeight="17.0" prefWidth="204.0" text="Filter by Date:">
                                       <VBox.margin>
                                          <Insets top="10.0" />
                                       </VBox.margin>
                                       <padding>
                                          <Insets left="5.0" />
                                       </padding>
                                       <font>
                                          <Font size="21.0" />
                                       </font>
                                    </Label>
                                    <ComboBox fx:id="datesFilter" onAction="#filterDate" prefHeight="26.0" prefWidth="202.0">
                                       <VBox.margin>
                                          <Insets top="15.0" />
                                       </VBox.margin>
                                    </ComboBox>
                                 </children>
                              </VBox>
                           </children>
                        </HBox>
                        <ScrollPane hmin="-1.0" layoutY="130.0" pannable="true" prefHeight="263.0" prefWidth="600.0" vmin="-1.0">
                           <content>
                            <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="265.0" prefWidth="600.0">
                                 <opaqueInsets>
                                    <Insets bottom="-1.0" left="-1.0" right="-1.0" top="-1.0" />
                                 </opaqueInsets>
                                 <children>
                                    <TableView fx:id="rankingTable" prefHeight="263.0" prefWidth="600.0">
                                      <columns>
                                        <TableColumn fx:id="rankColumn" prefWidth="75.0" text="Rank" />
                                          <TableColumn fx:id="flagColumn" prefWidth="86.0" text="Flag" />
                                          <TableColumn fx:id="teamColumn" prefWidth="129.0" text="Team" />
                                          <TableColumn fx:id="pointsColumn" prefWidth="105.0" text="Points" />
                                          <TableColumn fx:id="previousColumn" minWidth="7.0" prefWidth="111.0" text="Previous" />
                                          <TableColumn fx:id="diffColumn" prefWidth="78.0" text="+/-" />
                                      </columns>
                                    </TableView>
                                 </children>
                              </AnchorPane>
                           </content>
                        </ScrollPane>
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
          <Tab text="Add Score">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
            </content>
          </Tab>
        </tabs>
      </TabPane>
   </children>
</AnchorPane>
